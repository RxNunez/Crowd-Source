{{#partial "content"}}

    <p>Here are all the weeds listed in the store:{{storeName}} </p>

    <ul>

            <li>
                <h2>Weed Name:</h2>
                <p>{{weed.weedName}}</p>
                <h2>Description:</h2>
                <p>{{weed.description }}</p>
                <h2>Strain:</h2>
                <p>{{weed.strain}}</p>
                <h2>Origin:</h2>
                <p>{{weed.origin}}</p>
                <h2>Weed status:</h2>
                {{#if completed }}
                    <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Completed
                {{else}}
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Open
                {{/if}}
                <br>
                <a href="/tasks/update">Edit this weed</a><br>
                <a href="/tasks/delete">DELETE this weed (no undo)</a>
                </p>
            </li>

    </ul>
    <a href="/stores/{{store.id}}/update">Edit this store</a><br>
    <a href="/stores/{{store.id}}/delete">DELETE this store (no undo)</a>

{{/partial}}

{{> layout.hbs}}