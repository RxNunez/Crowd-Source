
{{#partial "content"}}

   {{#if editWeed}}
       <form action="/weeds/update" method="post">
       <h1>Edit this Weed!</h1>
       <select id="weedToEditId" name="weedToEditId">
       {{#each weeds }}
               <option value="{{id}}">{{weedname}}</option>
       {{/each}}
       </select>
           <label for="weedname">Edit this weed's name</label>
           <input id="weedname" name="weedname" type="text" placeholder="Enter a new name">
           <br>
           <label for="description">Edit this weed's description</label>
           <input id="description" name="description" type="text" placeholder="Enter a new description">
           <br>
           <label for="strain">Weed strain</label>
           <input id="strain" name="strain" type="text">
           <br>
           <label for="origin">Weed origin</label>
           <input id="origin" name="origin" type="text">
           <br>
           <label for="storeId">Update this weed's store:</label>
           <select id="storeId" name="storeId">
               {{#each stores}}
                   <option value="{{id}}">{{name}}</option>
               {{/each}}
           </select>
           <p>Don't see the right store?<a href="/stores/new">Add a new one first.</a></p>
       </form>
   {{else}}
           <h2>Add a new Weed!</h2>

       <form action="/weeds/new" method="post">
       {{#if stores}}
           <label for="weedname">Edit this weed's name</label>
           <input id="weedname" name="weedname" type="text" placeholder="Enter a new name">
           <br>
           <label for="description">Edit this weed's description</label>
           <input id="description" name="description" type="text" placeholder="Enter a new description">
           <br>
           <label for="strain">Weed strain</label>
           <input id="strain" name="strain" type="text">
           <br>
           <label for="origin">Weed origin</label>
           <input id="origin" name="origin" type="text">
           <br>
           <label for="storeId">Update this weed's store:</label>
           <select id="storeId" name="storeId">
               {{#each stores}}
                   <option value="{{id}}">{{name}}</option>
               {{/each}}
           </select>
           <p>Don't see the right store?<a href="/stores/new">Add a new one first.</a></p>
       {{else}}
           <h3> You'll need to add a store before you add a weed. <a href="/stores/new">Add one here.</a> </h3>
       {{/if}}

   {{/if}}
       <button type="submit" class="btn btn-default">Go!</button>
   </form>

{{/partial}}

{{> layout.hbs}}