{{#partial "content"}}
    <p>Here are all the weeds listed in the store:    {{storename}} </p>

    <ul>
        {{#each weeds}}
            <li>
                <h5>Weed Name:</h5>
                <p>{{weedname}}</p>
                <h5>Description</h5>
                <p>{{description }}</p>
                <h5>Strain:</h5>
                <p>{{strain}}</p>
                <h5>Origin</h5>
                <p>{{origin}}</p>
                <h5>Weed status:</h5>
                {{#if completed }}
                    <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Completed
                {{else}}
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Open
                {{/if}}
                <br>
                <a href="/tasks/update">Edit this weed</a><br>
                <a href="/tasks/delete">DELETE this weed (no undo)</a>
                </p>
            </li>
        {{/each}}
    </ul>
    <a href="/categories/{{category.id}}/update">Edit this store</a><br>
    <a href="/categories/{{category.id}}/delete">DELETE this store (no undo)</a>

{{/partial}}

{{> layout.hbs}}